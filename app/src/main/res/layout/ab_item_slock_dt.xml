        </RelativeLayout>
    <!--,锁单开始日期-->
    <RelativeLayout
        android:id="@+id/rl_s_lock_hsdate"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
       >

        <TextView
            android:id="@+id/text_s_lock_hsdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="锁单开始日期：" />

        <TextView
            android:id="@+id/s_lock_hsdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_s_lock_hsdate"
            android:gravity="center"
            android:text="2018/5/20"
            android:textColor="#222"
            android:textSize="14sp" />

    </RelativeLayout>
    <!--锁单结束日期-->
    <RelativeLayout
        android:id="@+id/s_lock_ll_date"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/text_s_s_lock_hedate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="锁单结束日期：" />

        <TextView
            android:id="@+id/s_lock_hedate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_s_s_lock_hedate"
            android:gravity="center"
            android:text="2018/5/20"
            android:textColor="#222"
            android:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>