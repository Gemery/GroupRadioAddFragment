<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺编号："
            />
        <TextView
            android:id="@+id/occ_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxx1234557636545"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户姓名："
            />
        <TextView
            android:id="@+id/occ_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxxmoumou"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户手机号码："
            />
        <TextView
            android:id="@+id/cs_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1234557636545"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建立资料时间："
            />
        <TextView
            android:id="@+id/occ_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018/6/1"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对应业务员："
            />
        <TextView
            android:id="@+id/occ_emp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="某某"
            />
    </LinearLayout>

</LinearLayout>