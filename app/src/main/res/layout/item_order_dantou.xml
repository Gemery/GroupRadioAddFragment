<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
    <!--单据编号-->
    <include layout="@layout/item_order_bh"></include>
    <!--客服姓名-->
    <LinearLayout
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户姓名："
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="14sp"
            android:text="某某"

            />

    </LinearLayout>
    <!--消费者手机号-->
    <LinearLayout
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费者手机号："
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/custom_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="14sp"
            android:text="xx123456"
            />

    </LinearLayout>
    <!--消费者地址-->
    <LinearLayout
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费者地址："
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/custom_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="14sp"
            android:text="xxxtt111"
            />
    </LinearLayout>
    <!--业务员编号-->
    <include layout="@layout/item_order_emp_code"></include>
    <!--约定送货时间-->
    <include layout="@layout/item_order_sh_date"></include>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>